<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE panel SYSTEM "http://www.sigames.com/dtds/sios/panel.dtd">

<panel title="header">
	<layout class="stick_to_sides_attachment" alignment="horizontal" inset="0" layout_children="true"/>
	<layout class="fit_children_attachment" alignment="vertical" offset="0"/>

	<attachment class="get_global_attachment" get_property="Dmen" set_property="coni"/>

	<!-- STANDARD HEADER ======================================================================== -->
	<container id="NHdr" height="64">
		<!-- TODO: Might be value 22 here -->
		<attachment class="test_global_attachment" get_property="scid" value="0" set_property="hidn" skip_if_null="false" skip_if_resetting="false"/>

		<layout class="stick_to_sides_attachment" alignment="all" inset="0" layout_children="true"/>

		<!-- Panel graphic - COLOUR -->
		<widget class="picture" id="pict" file="navigation/titlebar" auto-size="all" cached="true" rthr="70">
			<attachment class="get_global_attachment" get_property="bkcl" set_property="colr"/>
			<layout class="stick_to_sides_attachment" alignment="all" inset="0"/>
		</widget>

		<container>
			<layout class="stick_to_sides_attachment" alignment="all" inset="0" offset="0" layout_children="true"/>
			<layout class="arrange_horizontal_attachment" offset="0" inset="0" layout="-2,-1" />

			<!-- HEADER LEFT AREA -->
			<container>
				<layout class="stick_to_sides_attachment" alignment="vertical" inset="0" layout_children="true"/>
				<layout class="stick_to_sides_attachment" alignment="left, vertical" inset="0" offset="0" />

				<layout class="fit_children_attachment" alignment="horizontal,fill" gap="0" offset="0" />
				<layout class="arrange_horizontal_attachment" layout="88,60,32,-1" gap="0" />

				<!-- History Back & Forward -->
				<container>
					<layout class="centre_in_parent_attachment" alignment="vertical" layout_children="true"/>
					<layout class="stick_to_sides_attachment" alignment="left" inset="0" />

					<widget class="picture" id="pict" auto_size="all" file="navigation/history/history_back" cached="true" rthr="68">
						<attachment class="get_global_attachment" get_property="fcol" set_property="colr"/>
						<layout class="stick_to_sides_attachment" alignment="left" offset="0" inset="0"/>
						<layout class="stick_to_sides_attachment" alignment="vertical" offset="0" inset="0"/>
					</widget>

					<widget class="picture" id="pict" auto_size="all" file="navigation/history/history_forward" cached="true" rthr="68">
						<attachment class="get_global_attachment" get_property="fcol" set_property="colr"/>
						<layout class="stick_to_sides_attachment" alignment="right" offset="0" inset="0"/>
						<layout class="stick_to_sides_attachment" alignment="vertical" offset="0" inset="0"/>
					</widget>

					<widget class="action_button" id="back" auto_size="all" appearance="navigation/history/back" cached="true">
						<attachment class="get_global_attachment" get_property="disp" set_property="disa"/>
						<record id="click_event" event_id="GOTO" event_target="scrn" scin="-3"/>
						<layout class="stick_to_sides_attachment" alignment="left" offset="0" inset="0"/>
						<layout class="stick_to_sides_attachment" alignment="vertical" offset="0" inset="0"/>
					</widget>

					<widget class="action_button" id="forw" auto_size="all" alignment="centre" appearance="navigation/history/forward" cached="true">
						<attachment class="get_global_attachment" get_property="disn" set_property="disa"/>
						<record id="click_event" event_id="GOTO" event_target="scrn" scin="-2"/>
						<layout class="stick_to_sides_attachment" alignment="right" offset="0" inset="0"/>
						<layout class="stick_to_sides_attachment" alignment="vertical" offset="0" inset="0"/>
					</widget>

				</container>

				<!-- Team Logo -->
				<container>
					<layout class="stick_to_sides_attachment" alignment="horizontal" layout_children="true"/>
					<layout class="stick_to_sides_attachment" alignment="vertical"/>

					<attachment class="test_global_attachment" get_property="mnpc" skip_if_null="false" set_property="hidn"/>

					<widget class="picture" id="logo" auto_size="all">
						<layout class="centre_in_parent_attachment" alignment="all" offset="0" inset="0"/>
						<!-- Get logo -->
						<attachment class="get_global_attachment" get_property="mnpc" set_property="file" skip_if_null="false"/>
					</widget>
				</container>

				<!-- Quick Flicks -->
				<container id="text">
					<layout class="stick_to_sides_attachment" alignment="vertical" />
					<layout class="stick_to_sides_attachment" alignment="horizontal" layout_children="true" />

					<layout class="arrange_horizontal_attachment" layout="-1,-1"/>

					<widget class="quick_flick_button" auto_size="all" appearance="navigation/quickflicks/right" cached="true">
						<layout class="stick_to_sides_attachment" alignment="top" inset="8"/>
						<integer id="step" value="-1" />
					</widget>

					<widget class="quick_flick_button" auto_size="all" appearance="navigation/quickflicks/left" cached="true">
						<layout class="stick_to_sides_attachment" alignment="top" inset="24"/>
						<integer id="step" value="1" />
					</widget>
				</container>

				<!-- Title -->
				<container id="tita">
					<layout class="stick_to_sides_attachment" alignment="horizontal" layout_children="true"/>
					<layout class="stick_to_sides_attachment" alignment="vertical"/>

					<layout class="arrange_vertical_attachment" layout="-1,16" />
					<!-- <layout class="fit_children_attachment" aligment="vertical, fill" /> -->

					<!-- title area -->
					<widget class="text" id="sect" standard_spec="title,large" autosize="all" alignment="left">
						<layout class="stick_to_sides_attachment" alignment="top" inset="8"/>
						<attachment class="get_global_attachment" get_property="titl" set_property="text"/>
						<attachment class="get_global_attachment" get_property="fcol" set_property="colr"/>
					</widget>

					<!-- subtitle area -->
					<widget class="text" id="subs" standard_spec="text" alignment="left" mlti="false" auto_size="horizontal">
						<layout class="stick_to_sides_attachment" alignment="bottom" inset="4"/>
						<!-- hide when no subtitle -->
						<attachment class="test_global_attachment" get_property="subt" skip_if_null="false" set_property="hidn"/>

						<attachment class="get_global_attachment" get_property="subt" set_property="text"/>
						<attachment class="get_global_attachment" get_property="fcol" set_property="colr"/>
					</widget>
				</container>

			</container>

			<!-- HEADER RIGHT AREA -->
			<container>
				<layout class="stick_to_sides_attachment" alignment="vertical" inset="0" layout_children="true"/>
				<layout class="stick_to_sides_attachment" alignment="right" inset="0" offset="0" layout_children="true"/>
				<layout class="stick_to_sides_attachment" alignment="right" inset="0"/>
				<layout class="fit_children_attachment" alignment="horizontal,fill" />
				<layout class="arrange_horizontal_attachment" layout="120,150" />

				<container class="plain_box" appearance="navigation/date/paper">
					<layout class="stick_to_sides_attachment" alignment="vertical" layout_children="true" />
					<layout class="stick_to_sides_attachment" alignment="vertical" inset="0"/>
					<layout class="stick_to_sides_attachment" alignment="right" inset="150"/>
					<layout class="arrange_vertical_attachment" layout="-1,-1" gap="0"/>
					<attachment class="test_global_attachment" get_property="cont" value="-8" set_property="hidn" skip_if_null="false" skip_if_resetting="false" priority="1"/>

					<widget class="date_cell" id="date" text="date" alignment="top, center" auto_size="vertical" size="10">
						<layout class="stick_to_sides_attachment" alignment="horizontal" />
						<layout class="stick_to_sides_attachment" alignment="top" inset="20" />

						<attachment class="get_global_attachment" get_property="date" set_property="valu"/>
						<attachment class="get_global_attachment" get_property="fcol" set_property="colr"/>

						<string id="format">
								[%date#1-long_no_day]
						</string>
					</widget>

					<widget class="date_cell" id="date" text="date" standard_spec="text" size="8" alignment="bottom,center">
						<layout class="stick_to_sides_attachment" alignment="horizontal" />
						<layout class="stick_to_sides_attachment" alignment="bottom" inset="14" />

						<attachment class="get_global_attachment" get_property="date" set_property="valu"/>
						<attachment class="get_global_attachment" get_property="fcol" set_property="colr"/>
						<string id="format">
							[%date#1-day] [%date#1-time]
						</string>
					</widget>
				</container>

				<!-- Continue Button -->
				<widget class="text_button" appearance="navigation/continue_button/button" text="Continue" alignment="vertical" size="14">
					<layout class="stick_to_sides_attachment" alignment="vertical" inset="0" />
					<layout class="stick_to_sides_attachment" alignment="right" inset="0"/>

					<attachment class="get_global_attachment" get_property="fcol" set_property="colr"/>
					<record id="click_event" event_id="CONT" event_target="scrn"/>
					<attachment class="test_global_attachment" get_property="cont" set_property="disa">
						<list id="value">
							<integer value="-8"/>
							<integer value="-5"/>
						</list>
					</attachment>

					<!-- match play text -->
					<attachment class="get_global_attachment" get_property="cttx" set_property="text"/>
				</widget>

			</container>
		</container>
	</container>
	<!-- MATCH HEADER ======================================================================== -->
	<container id="Mhdr" width="500">
		<attachment class="test_global_attachment" get_property="scid" value="22" mode="1" set_property="hidn" skip_if_null="false" skip_if_resetting="false" priority="1"/>

		<layout class="fit_children_attachment" alignment="vertical" offset="0"/>
		<layout class="stick_to_sides_attachment" alignment="horizontal" inset="0" layout_children="true"/>

		<widget class="match_titlebar_panel"/>
	</container>

	<!-- SUB HEADER ======================================================================== -->
	<!-- <container>
		<widget class="picture" id="pict" auto_size="vertical" file="navigation/titlepanel" cached="true">
			<layout class="stick_to_sides_attachment" alignment="bottom" inset="0"/>
		</widget>
	</container> -->
</panel>
