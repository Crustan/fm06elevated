<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE panel SYSTEM "http://www.sigames.com/dtds/sios/panel.dtd">

<panel title="header">
	<layout class="fit_children_attachment" alignment="vertical" offset="0"/>
	<!-- <layout class="stick_to_sides_attachment" alignment="horizontal" inset="0" offset="0" /> -->
	<layout class="stick_to_sides_attachment" alignment="horizontal" inset="0" layout_children="true"/>

	<attachment class="get_global_attachment" get_property="Dmen" set_property="coni"/>

	<!-- STANDARD HEADER ======================================================================== -->
	<container id="NHdr" height="56">
		<layout class="stick_to_sides_attachment" alignment="all" inset="0" layout_children="true"/>
		<attachment class="test_global_attachment" get_property="scid" value="0" set_property="hidn" skip_if_null="false" skip_if_resetting="false"/>

		<!-- Panel graphic - COLOUR -->
		<widget class="picture" id="pict" file="navigation/titlebar" auto-size="all" cached="true" rthr="68">
			<attachment class="get_global_attachment" get_property="bkcl" set_property="colr"/>
			<layout class="stick_to_sides_attachment" alignment="all" inset="0"/>
		</widget>

		<container>
			<layout class="stick_to_sides_attachment" alignment="all" inset="0" offset="0"/>

			<layout class="stick_to_sides_attachment" alignment="vertical" inset="0" offset="0" layout_children="true"/>
			<layout class="arrange_horizontal_attachment" offset="0" inset="0" layout="-1,-1" />

			<!-- HEADER LEFT AREA -->
			<container>
				<layout class="stick_to_sides_attachment" alignment="left, vertical" inset="0" offset="0" />

				<layout class="stick_to_sides_attachment" alignment="vertical" inset="0" offset="0" layout_children="true"/>
				<layout class="arrange_horizontal_attachment" offset="0" inset="0" layout="88,32,50,-1" gap="0" />

				<!-- History Back & Forward -->
				<container id="history" file="header/history"/>

				<!-- Quick Flicks -->
				<container id="quickflicks" file="header/quickflicks"/>

				<!-- Team Logo -->
				<container file="header/logo"/>

				<!-- Title -->
				<container file="header/title"/>

			</container>

			<!-- HEADER RIGHT AREA -->
			<container>			
				<layout class="stick_to_sides_attachment" alignment="right,vertical" inset="0" offset="0"/>

				<layout class="stick_to_sides_attachment" alignment="vertical" inset="0" offset="0" layout_children="true"/>
				<layout class="arrange_horizontal_attachment" offset="0" inset="0" layout="-1,70,91,100,140" gap="0"/>
				<container>
					<!-- STRETCHING DUMMY CONTAINER  -->
				</container>

				<!-- World menu -->
				<container>
					<layout class="stick_to_sides_attachment" alignment="top, horizontal" inset="0" offset="0" layout_children="true"/>
					<widget class="picture" file="navigation/world/button_c" auto_size="all" cached="true" rthr="68">
						<attachment class="get_global_attachment" get_property="fcol" set_property="colr"/>
					</widget>
					<widget class="header_popup" appearance="navigation/world" text="">
						<attachment class="get_global_attachment" get_property="wrld" set_property="itms" skip_if_null="false"/>
					</widget>
				</container>

				<!-- Pref menu -->
				<widget class="pref_button">
					<record id="items" file="menus/game"/>
					<string id="hint" value="Options"/>
				</widget>

				<!-- Date  -->
				<container class="plain_box" appearance="navigation/date/button">
					<attachment class="test_global_attachment" get_property="cont" value="-8" set_property="hidn" skip_if_null="false" skip_if_resetting="false" priority="1"/>

					<layout class="stick_to_sides_attachment" alignment="horizontal" inset="0" offset="0" layout_children="true"/>
					<layout class="arrange_vertical_attachment" layout="34" gap="0" />

					<container>
						<layout class="centre_in_parent_attachment" alignment="vertical" offset="0" inset="0"/>
						<layout class="stick_to_sides_attachment" alignment="horizontal" />

						<layout class="arrange_vertical_attachment" layout="-1,12" gap="0" />

						<widget class="date_cell" id="date" text="date" alignment="center" auto_size="all" size="11" colour="white">
							<layout class="centre_in_parent_attachment" alignment="horizontal" />
							<layout class="stick_to_sides_attachment" alignment="top" inset="2" offset="0" />

							<attachment class="get_global_attachment" get_property="date" set_property="valu"/>
							<string id="format">
								[%date#1-short_no_year]
							</string>
						</widget>

						<widget class="date_cell" id="date" text="date" standard_spec="text" auto_size="all" alignment="center" size="8" colour="white">
							<layout class="centre_in_parent_attachment" alignment="horizontal" />
							<layout class="stick_to_sides_attachment" alignment="bottom" inset="0" offset="0"/>

							<attachment class="get_global_attachment" get_property="date" set_property="valu"/>
							<string id="format">
								[%date#1-day] [%date#1-time]
							</string>
						</widget>
					</container>
				</container>

				<!-- Continue Button -->
				<widget class="text_button" appearance="navigation/continue_button/button" text="Continue" alignment="centre" size="12" colour="white" inset="0" offset="0">
					<layout class="stick_to_sides_attachment" alignment="vertical" inset="0" offset="0"/>
					<layout class="stick_to_sides_attachment" alignment="right" inset="0" offset="0"/>
					<record id="click_event" event_id="CONT" event_target="scrn"/>

					<attachment class="test_global_attachment" get_property="cont" set_property="disa">
						<list id="value">
							<integer value="-8"/>
							<integer value="-5"/>
						</list>
					</attachment>

					<!-- match play text -->
					<attachment class="get_global_attachment" get_property="cttx" set_property="text"/>
				</widget>

			</container>
		</container>
	</container>

	<!-- MATCH HEADER ======================================================================== -->
	<container id="Mhdr">
		<attachment class="test_global_attachment" get_property="scid" value="22" mode="1" set_property="hidn" skip_if_null="false" skip_if_resetting="false" priority="1"/>

		<layout class="fit_children_attachment" alignment="vertical" inset="0" offset="0"/>
		<!-- Inset here should be same width as Header Right -->
		<layout class="stick_to_sides_attachment" alignment="right" inset="300"/>
		<layout class="stick_to_sides_attachment" alignment="vertical" inset="0" offset="0"/>

		<widget class="match_titlebar_panel"/>
	</container>

</panel>
