<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE panel SYSTEM "http://www.sigames.com/dtds/sios/panel.dtd">

<panel title="history">
  <!-- To adjust height, you need to change the images -->
  <layout class="centre_in_parent_attachment" alignment="vertical" layout_children="true"/>
  <layout class="stick_to_sides_attachment" alignment="left" inset="0" />

  <widget class="picture" id="back" auto_size="all" file="navigation/history/history_back" cached="true" rthr="68">
    <attachment class="test_global_attachment" get_property="disp" value="1" skip_if_null="false" set_property="hidn"/>
    <attachment class="get_global_attachment" get_property="fcol" set_property="colr"/>
    <layout class="stick_to_sides_attachment" alignment="left" offset="0" inset="0"/>
    <layout class="stick_to_sides_attachment" alignment="vertical" offset="0" inset="0"/>
  </widget>

  <widget class="action_button" id="back" auto_size="all" appearance="navigation/history/back" cached="true">
    <attachment class="get_global_attachment" get_property="disp" set_property="disa"/>
    <record id="click_event" event_id="GOTO" event_target="scrn" scin="-3"/>
    <layout class="stick_to_sides_attachment" alignment="left" offset="0" inset="0"/>
    <layout class="stick_to_sides_attachment" alignment="vertical" offset="0" inset="0"/>
  </widget>

  <widget class="picture" id="forw" auto_size="all" file="navigation/history/history_forward" cached="true" rthr="68">
    <attachment class="test_global_attachment" get_property="disn" value="1" skip_if_null="false" set_property="hidn"/>
    <attachment class="get_global_attachment" get_property="fcol" set_property="colr"/>
    <layout class="stick_to_sides_attachment" alignment="right" offset="0" inset="0"/>
    <layout class="stick_to_sides_attachment" alignment="vertical" offset="0" inset="0"/>
  </widget>

  <widget class="action_button" id="forw" auto_size="all" alignment="centre" appearance="navigation/history/forward" cached="true">
    <attachment class="get_global_attachment" get_property="disn" set_property="disa"/>
    <record id="click_event" event_id="GOTO" event_target="scrn" scin="-2"/>
    <layout class="stick_to_sides_attachment" alignment="right" offset="0" inset="0"/>
    <layout class="stick_to_sides_attachment" alignment="vertical" offset="0" inset="0"/>
  </widget>
</panel>