<panel title="Match Title Bar" height="97">
	<layout class="fit_children_attachment" alignment="vertical" offset="0"/>
	<layout class="stick_to_sides_attachment" alignment="horizontal" inset="0" layout_children="true"/>


	<widget class="picture" id="pict" auto_size="vertical" file="navigation/titlebar" cached="true" rthr="60" colour="default background">
		<layout class="stick_to_sides_attachment" alignment="horizontal" inset="0"/>
		<layout class="stick_to_sides_attachment" alignment="top" inset="0"/>
	</widget>

	<!-- home/score/away graphics -->
	<container>
		<layout class="arrange_horizontal_attachment" layout="140,140,140" gap="0"/>
		<layout class="stick_to_sides_attachment" alignment="vertical" layout_children="true" inset="0"/>

		<layout class="stick_to_sides_attachment" alignment="vertical" inset="0"/>

		<widget class="picture" id="T1bp" auto_size="vertical" file="navigation/match/home" cached="true" rthr="68" width="140">
			<layout class="stick_to_sides_attachment" alignment="right" inset="342"/>
		</widget>

		<widget class="picture" id="pict" auto_size="vertical" file="navigation/match/scoreboard" cached="true" width="140">
			<layout class="stick_to_sides_attachment" alignment="right" inset="202"/>
		</widget>

		<widget class="picture" id="T2bp" auto_size="vertical" file="navigation/match/away" cached="true" rthr="68" width="140">
			<layout class="stick_to_sides_attachment" alignment="right" inset="62"/>
		</widget>
	</container>

	<!-- logo graphics -->
	<container>
		<layout class="arrange_horizontal_attachment" gap="0"/>
		<layout class="stick_to_sides_attachment" alignment="vertical" layout_children="true" inset="0"/>

		<layout class="stick_to_sides_attachment" alignment="vertical" inset="0"/>

		<widget class="picture" id="logo" auto_size="all">
			<layout class="stick_to_sides_attachment" alignment="right" inset="390"/>
			<attachment class="get_global_attachment" get_property="mnpc" set_property="file" skip_if_null="false"/>
		</widget>

		<widget class="picture" id="logo" auto_size="all">
			<layout class="stick_to_sides_attachment" alignment="right" inset="30"/>
			<attachment class="get_global_attachment" get_property="scpc" set_property="file" skip_if_null="false"/>
		</widget>
	</container>

	<!-- home/away score -->
	<container>
		<layout class="arrange_horizontal_attachment" layout="100,100,100,100" gap="0"/>
		<layout class="stick_to_sides_attachment" alignment="vertical" layout_children="true" inset="0"/>

		<layout class="stick_to_sides_attachment" alignment="vertical" inset="0"/>

		<widget class="text" id="T1sc" font="fonts/fm main" size="28" height="40" colour="white" style="shadowed">
			<layout class="stick_to_sides_attachment" alignment="right" inset="290"/>
			<layout class="stick_to_sides_attachment" alignment="top" inset="7"/>
			<string id="hint" value="Want to learn better ball control? Girls head to Susie!"/>
		</widget>

		<widget class="text" id="T1as" font="fonts/fm main" size="8" height="30" alignment="centre" colour="white" style="shadowed">
			<layout class="stick_to_sides_attachment" alignment="right" inset="300"/>
			<layout class="stick_to_sides_attachment" alignment="top" inset="3"/>
		</widget>

		<widget class="text" id="T2sc" font="fonts/fm main" size="28" height="40" colour="white" style="shadowed">
			<layout class="stick_to_sides_attachment" alignment="right" inset="80"/>
			<layout class="stick_to_sides_attachment" alignment="top" inset="7"/>
			<string id="hint" value="Do you have trouble scoring? Susie doesn't."/>
		</widget>

		<widget class="text" id="T2as" font="fonts/fm main" size="8" height="30" alignment="centre" colour="white" style="shadowed">
			<layout class="stick_to_sides_attachment" alignment="right" inset="145"/>
			<layout class="stick_to_sides_attachment" alignment="top" inset="3"/>
		</widget>
	</container>

	<!-- match clock -->
	<container>
		<layout class="arrange_horizontal_attachment" layout="140" gap="0"/>
		<layout class="stick_to_sides_attachment" alignment="vertical" layout_children="true" inset="0"/>

		<layout class="stick_to_sides_attachment" alignment="vertical" inset="0"/>

		<widget class="text" id="Mclk" font="fonts/fm main" size="20" height="25" alignment="centre" colour="yellow" style="shadowed">
			<layout class="stick_to_sides_attachment" alignment="right" inset="200"/>
			<layout class="stick_to_sides_attachment" alignment="top" inset="-18"/>
			<attachment class="get_global_attachment" get_property="matt" set_property="text"/>
		</widget>
	</container>





</panel>